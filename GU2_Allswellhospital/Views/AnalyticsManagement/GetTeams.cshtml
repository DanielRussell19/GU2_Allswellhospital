@model IEnumerable<GU2_Allswellhospital.Models.Team>

@{
    ViewBag.Title = "Select Team";
}

<h2>Select Team</h2>

@if (ViewBag.ErrorMessage != null)
{
    <p style=" border:dashed; border-color: red; ">
        @( (string)ViewBag.ErrorMessage )
    </p>
}

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ward.WardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ward.WardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.ActionLink("select", "GetPatientsUnderTeam", new { id = item.TeamNo }) |
        </tr>
    }

</table>
