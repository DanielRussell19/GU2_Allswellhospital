@model IEnumerable<GU2_Allswellhospital.Models.Ward>

@{
    ViewBag.Title = "Ward Management";
}

<h2>Ward Management</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WardCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WardSpacesTaken)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.WardName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WardCapacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WardSpacesTaken)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.WardNo }) |
            @Html.ActionLink("Details", "Details", new { id = item.WardNo }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.WardNo })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Back to Main", "AdminServicesIndex", "AdminServices")
</p>
