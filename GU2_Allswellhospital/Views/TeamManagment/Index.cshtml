@model IEnumerable<GU2_Allswellhospital.Models.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ward.WardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ward.WardName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TeamNo }) |
            @Html.ActionLink("Assign Staff", "AssignStaffListing", new { id = item.TeamNo }) |
            @Html.ActionLink("UnAssign Staff", "UnAssignStaffListing", new { id = item.TeamNo }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TeamNo })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Back to Main", "StaffHome", "StaffHome")
</p>
