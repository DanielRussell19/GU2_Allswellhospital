
@{
    ViewBag.Title = "AdminServicesIndex";
}

<h2 class="text-center">Admin Services</h2>

@if (Request.IsAuthenticated)
{
    <button class="btn-block btn-primary" onclick="window.location.href = '@Url.Action("Index","StaffManagement")';" style="position: center">Staff Management</button><br />

    <button class="btn-block btn-primary" onclick="window.location.href = '@Url.Action("Index","DrugManagement")';" style="position: center">Drug Management</button><br />

    <button class="btn-block btn-primary" onclick="window.location.href = '@Url.Action("Index","WardManagement")';" style="position: center">Ward Management</button><br />

    <button class="btn-block btn-primary" onclick="window.location.href = '@Url.Action("Analytics","AdminServices")';" style="position: center">Analytics</button><br />
}
else
{
    @Html.AntiForgeryToken()
    Response.Redirect("~/Home/Index");
}

<p>
    @Html.ActionLink("Back to Main", "StaffHome", "StaffHome")
</p>